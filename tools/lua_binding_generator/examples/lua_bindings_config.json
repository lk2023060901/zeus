{
  "version": "2.0",
  "description": "Lua Binding Generator v2.0 配置文件",
  
  "output": {
    "directory": "generated_bindings",
    "module_name": "MyGameCore",
    "default_namespace": "global",
    "generate_includes": true,
    "generate_registration_function": true,
    "use_namespace_tables": true,
    "indent_size": 4
  },
  
  "inference": {
    "auto_infer_namespaces": true,
    "auto_infer_properties": true,
    "auto_infer_stl_containers": true,
    "auto_infer_callbacks": true,
    "prefer_snake_case": false
  },
  
  "incremental": {
    "enabled": true,
    "cache_file": ".lua_binding_cache",
    "cache_expiry_hours": 1,
    "force_rebuild": false
  },
  
  "performance": {
    "enable_parallel": true,
    "max_threads": 0,
    "verbose": false,
    "show_stats": true
  },
  
  "include_paths": [
    "src/",
    "include/",
    "thirdparty/"
  ],
  
  "source_patterns": [
    "src/**/*.h",
    "include/**/*.h"
  ],
  
  "exclude_patterns": [
    "**/test/**",
    "**/tests/**",
    "**/*_internal.h"
  ],
  
  "custom_mappings": {
    "namespaces": {
      "game::core": "Core",
      "game::entities": "Entities",
      "game::systems": "Systems"
    },
    
    "type_aliases": {
      "std::shared_ptr<Player>": "PlayerPtr",
      "std::vector<int>": "IntArray",
      "std::map<std::string, int>": "StringIntMap"
    }
  },
  
  "generation_rules": {
    "max_constructor_args": 8,
    "auto_generate_tostring": true,
    "auto_generate_equality": true,
    "handle_smart_pointers": true,
    "expose_stl_iterators": false
  },
  
  "lua_compatibility": {
    "lua_version": "5.4",
    "sol2_version": "3.3",
    "use_lua_exceptions": true,
    "enable_coroutines": false
  },
  
  "hooks": {
    "pre_generation": [],
    "post_generation": [
      "clang-format -i {output_files}"
    ],
    "pre_build": [],
    "post_build": []
  },
  
  "templates": {
    "custom_header": "// Generated by Lua Binding Generator v2.0\\n// Project: {project_name}\\n// Timestamp: {timestamp}\\n",
    "custom_footer": "\\n// End of generated bindings\\n"
  }
}